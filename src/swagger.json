{
    "openapi": "3.1.0",
    "info": {
        "title": "API de Turismo",
        "summary": "Esta é uma API para uma aplicação web voltada para o Turismo. Através dessa API o front-end pode se comunicar com o back-end trafegando dados e permitindo a interação do usuário com a aplicação. Essa API permite a manipulação de recursos, como: Usuários, Estabelecimentos, Categorias de Estabelecimentos, Endereços, Favoritos, entre outros recursos da aplicação.",
        "version": "1.0.0"
    },
    "paths": {
        "/users": {
            "post": {
                "summary": "Cadastro de usuário",
                "description": "Essa rota é responsável pelo cadastro de novos usuários na aplicação.",
                "tags": [
                    "Users"
                ],
                "requestBody": {
                    "content": {
                        "application/json": {
                            "schema": {
                                "$ref": "#/components/schemas/UserCreationInput"
                            },
                            "examples": {
                                "User": {
                                    "value": {
                                        "data": {
                                            "name": "César Munari",
                                            "email": "cesarmunari@emailtest.com",
                                            "password": "strong_p4ssw0rd",
                                            "picture_url": "http://anyimage.com",
                                            "birthdate": "1967/03/19"
                                        }
                                    }
                                }
                            }
                        }
                    }
                },
                "responses": {
                    "400": {
                        "description": "Usuário já existe.",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "object",
                                    "$ref": "#/components/schemas/ErrorResponse"
                                }
                            }
                        }
                    },
                    "200": {
                        "description": "OK",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "object",
                                    "properties": {
                                        "data": {
                                            "type": "object",
                                            "$ref": "#/components/schemas/UserResponse"
                                        }
                                    }
                                }
                            }
                        }
                    },
                    "500": {
                        "description": "Internal Server Error",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "object",
                                    "$ref": "#/components/schemas/ErrorResponse"
                                }
                            }
                        }
                    }
                }
            },
            "get": {
                "summary": "Listagem de usuários",
                "description": "Essa rota é responsável pelo cadastro de novos usuários na aplicação.",
                "tags": [
                    "Users"
                ],
                "responses": {
                    "404": {
                        "description": "Dados não encontrados",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "object",
                                    "$ref": "#/components/schemas/ErrorResponse"
                                }
                            }
                        }
                    },
                    "200": {
                        "description": "OK",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "object",
                                    "$ref": "#/components/schemas/UsersArrayResponse"
                                }
                            }
                        }
                    }
                }
            }
        }
    },
    "components": {
        "schemas": {
            "UserCreationInput": {
                "type": "object",
                "properties": {
                    "name": {
                        "type": "string"
                    },
                    "email": {
                        "type": "string"
                    },
                    "password": {
                        "type": "string"
                    },
                    "picture_url": {
                        "type": "string"
                    },
                    "birthdate": {
                        "type": "string"
                    }
                }
            },
            "UserResponse": {
                "type": "object",
                "properties": {
                    "id": {
                        "type": "string"
                    },
                    "name": {
                        "type": "string"
                    },
                    "email": {
                        "type": "string"
                    },
                    "password": {
                        "type": "string"
                    },
                    "picture_url": {
                        "type": "string"
                    },
                    "birthdate": {
                        "type": "string"
                    },
                    "gender": {
                        "type": "string"
                    },
                    "cpf": {
                        "type": "string"
                    },
                    "phone_number": {
                        "type": "string"
                    },
                    "created_at": {
                        "type": "string"
                    },
                    "updated_at": {
                        "type": "string"
                    }
                }
            },
            "UsersArrayResponse": {
                "type": "object",
                "properties": {
                    "data": {
                        "type": "array",
                        "items": {
                            "$ref": "#/components/schemas/UserResponse"
                        }
                    }
                }
            },
            "ErrorResponse": {
                "type": "object",
                "properties": {
                    "message": {
                        "type": "string"
                    }
                }
            }
        }
    },
    "securitySchemes": {
        "bearerAuth": {
            "type": "http",
            "scheme": "bearer",
            "bearerFormat": "JWT"
        }
    }
}